---
import AnimateButton from './animateButton.astro';

const { data, href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---

<AnimateButton data={data} href={href} direction="bottom" aria-label={`Link to ${data} Page`} class:list={[className, {'opacity-60 cursor-not-allowed' : isActive, 'hover:opacity-85' : !isActive }, 'font-medium tracking-tight transition-any']} {...props}/>