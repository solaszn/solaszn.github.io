---
import Layout from "../layouts/layout.astro";
import Header from "../components/header.astro";
import ChatButton from "../components/chatButton.astro"
import Card from "../components/projectCard.astro"
import { siteConfig, referrals, projects } from "../../site.ts";
import type { objectInputType } from "astro/zod";
---

<!doctype html>
<html lang="en">
  <head>
    <Layout title={siteConfig.title} description={siteConfig.description} image={siteConfig.image} />
  </head>

  <body class="">
    <Header />
    <main class="mt-28">
      <div class="grid grid-cols-6 md:grid-cols-12 gap-x-8">
        <!-- Testimonials & CTA -->
        <div class="col-span-6 hidden md:block mt-3">
        <div class="flex gap-5 mb-10 w-11/12">
          <div class="w-0.5 h-full min-h-20 bg-white"/>
          <div class="opacity-90">
            <div class="">"{referrals.reframe.referral}"</div>
            <div class="mt-1">-  {referrals.reframe.author}</div>
          </div>
        </div>
        <ChatButton/>
        </div>

        <!-- Intro -->
        <div class="col-span-6">
          <div class="w-full">
            <div class="text-[26px] md:text-[32px] font-semibold leading-relaxed">Hey, I'm Feyisola. <br> A product designer who builds his ideas</div>
            <div class="mt-5 opacity-90">I obsess about little details that show up on a screen via the interwebs. I design interactions to be  intuitive and accessible often bringing them to life in production-quality code. I currently work at ...</div>
          </div>
        </div>

        <!-- Case Studies -->
        <div class="mt-16 col-span-full"/>
        <Card class="col-span-4 bg-violet-50" name={projects.reframe.name} href={projects.reframe.href} tags={projects.reframe.tags} description={projects.reframe.description} images={projects.reframe.images} />
        <Card class="col-span-4 bg-green-50" name={projects.accredit.name} href={projects.accredit.href} tags={projects.accredit.tags} description={projects.accredit.description} images={projects.accredit.images} />
        <Card class="col-span-4 bg-blue-50" name={projects.citisquare.name} href={projects.citisquare.href} tags={projects.citisquare.tags} description={projects.citisquare.description} images={projects.citisquare.images} />
      </div>
    </main>
  </body>
  
</html>
