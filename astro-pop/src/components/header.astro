---
import Headerlink from "./headerlink.astro";
import HeaderLink from "./headerlink.astro";
import { Icon } from "astro-icon/components"

const linksCase = "flex items-center py-2 px-4 md:bg-black/40 md:backdrop-blur";
---

<header class="fixed z-[100] top-4 w-full">
  <nav class="flex w-full items-center md:justify-between overflow-hidden bg-black/60 md:bg-transparent backdrop-blur md:backdrop-blur-none transition-any smooth">
    <div class=`home-logo relative ${linksCase} group gap-1.5`>
      <div class="rounded-full w-5 p-1 group-hover:rotate-180 transition-any delay-200 slow">
        <img src="/asterisk.svg" height="20" width="20" alt="" class="w-4 h-4">
      </div>
      <div class="hidden md:block font-medium text-lg">feyisola</div>
    </div>
    <div class="md:hidden w-1 h-7 border-l border-white/40"/>
    <div class={linksCase}>
      <div class="flex gap-10 items-center overflow-hidden">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/contact">Contact</HeaderLink>
        <HeaderLink href="/notes">Writing</HeaderLink>
        <div class="toggle-theme">
          <Icon name="sun" class="w-5 h-5 text-white"/>
        </div>
      </div>
    </div>
  </nav>
</header>